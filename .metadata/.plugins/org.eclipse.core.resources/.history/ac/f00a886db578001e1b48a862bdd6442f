#include <stdint.h>

#define ADC_BASE_ADDR 			0x40012400UL

#define ADC_CR_REG_OFFSET 		0x08UL

#define ADC_CR_REG_ADDR 		(ADC_BASE_ADDR + ADC_CR_REG_OFFSET)

int main(void)
{
    /* Loop forever */
	uint32_t *pAddrCrReg = (uint32_t*)ADC_CR_REG_ADDR;

	*pAddrCrReg |= (1 << 31);


	for(;;);
}
